{#
/**
 * @file
 * List with illustration.
 */
#}
{% if column > 1 %}
  {# Do not show zebra style or divider for horizontal view. #}
  {% set zebra = false %}
  {% set divider = false %}
{% endif %}

{# Cannot have a divider with zebra enabled. #}
{% if zebra == true %}
  {% set divider = false %}
{% endif %}

{% set _items = [] %}
{% for item in items %}
  {# Transform icon into ecl array. #}
  {% if item.icon %}
    {% set item = item|merge({'icon': to_ecl_icon(item.icon, '')}) %}
  {% endif %}
  {# Set square image if needed. #}
  {% if item.image %}
    {% set item = item|merge({
      'picture': {
        'img': item.image
      },
      'square': square_image,
    }) %}
  {% endif %}
  {% set _items = _items|merge([item]) %}
{% endfor %}
{% include '@ecl-twig/list-illustration' with {
  'column': column,
  'zebra': zebra,
  'items': _items,
  'centered': centered ?? false,
  'color_mode': color_mode|default(''),
  'extra_classes': extra_classes|default(''),
  'divider': divider ?? false,
  'icon_inline': icon_inline ?? false,
} only %}
