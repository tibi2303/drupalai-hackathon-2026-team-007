{{
  include(
    '@oe-bcl/bcl-card/card.html.twig',
    {
      title: title|default('Example card title'),
      title_tag: title_tag|default('h3'),
      title_link: link is not empty ? { path: link, label: title|default('Example card title') } : {},
      content: content|default('Example card content.'),
      variant: variant|default('primary'),
      horizontal: horizontal|default(false),
      horizontal_grid: {
        gutter: horizontal_gutter|default('')
      },
      border_variant: border_variant|default(''),
      text_color: text_color|default('dark'),
      card_header: card_header|default(''),
      card_footer: card_footer|default(''),
      image: image is not empty ? {
        path: image.src|default(''),
        alt: image.alt|default(''),
        position: image_position|default('top'),
        classes: image_classes|default('')
      } : {},
      extra_classes_body: extra_classes_body|default(''),
      extra_classes_header: extra_classes_header|default(''),
      extra_classes_footer: extra_classes_footer|default(''),
    },
    with_context: false
  )
}}
