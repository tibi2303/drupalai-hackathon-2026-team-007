{{
  include(
    '@oe-bcl/bcl-alert/alert.html.twig',
    {
      message: message|default(''),
      heading: heading|default(''),
      variant: (variant is defined and variant is not same as('')) ? variant : 'primary',
      dismissible: dismissible|default(true),
      animated_dismiss: animated_dismiss|default(true),
      icon_path: icon_path|default('/themes/custom/bcl_canvas/assets/bcl/icons/bootstrap-icons.svg'),
      icon_name: icon_name|default('info-circle'),
    },
    with_context: false
  )
}}
