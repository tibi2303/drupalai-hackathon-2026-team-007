{{
  include(
    '@oe-bcl/bcl-form-input/form-input.html.twig',
    {
      id: id|default(''),
      input_type: input_type|default('text'),
      label: label|default(''),
      required: required is defined ? required : false,
      checked: checked is defined ? checked : false,
      hidden_label: hidden_label is defined ? hidden_label : false,
      disabled: disabled is defined ? disabled : false,
      readonly: readonly is defined ? readonly : false,
      invalid: invalid is defined ? invalid : false,
      valid: valid is defined ? valid : false,
      invalid_feedback: invalid_feedback|default(''),
      valid_feedback: valid_feedback|default(''),
      floating: floating is defined ? floating : false,
      helper_text: helper_text|default(''),
      helper_text_id: helper_text_id|default(''),
      placeholder: placeholder|default(''),
      horizontal: horizontal is defined ? horizontal : false,
      horizontal_class: horizontal_class|default(''),
      horizontal_label_class: horizontal_label_class|default(''),
      switch: switch is defined ? switch : false,
      toggle: toggle is defined ? toggle : false,
      toggle_variant: toggle_variant|default('primary'),
      remove_wrapper: remove_wrapper is defined ? remove_wrapper : false,
      attributes: attributes is defined ? attributes : null,
    },
    with_context: false
  )
}}
